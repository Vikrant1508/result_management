<body class="container" style="background: #f2f2f2"> 
  <h1 class="my-3" style="color: #666fff;"><b>Searching result</b></h1>
  <div name="">
   <div class="row">
   	<h5>

    <% @result.each do |result| %>
    <div class="row">
	    <tr>
        <div class="card" style="width: 20rem;, height: 1rem;">
        <div class="card-body">
        <h5 class="card-title"><%= result.name.capitalize%>  <%= result.last_name.capitalize %></h5><br>
        <p class="card-text">
        <%= result.group %><br>
        </p>
        <a <%= link_to 'View', result %></a>
      </div>
      </div>
      </tr>
 	<% end %>
</div>
 </div>
</body>


   