<body class="container" style="background: #f2f2f2"> 
  <h1 class="my-3" style="color: #666fff;"><b>Searching result</b></h1>
  <div name="">
   <div class="row">
   	<h5>
<table>
  <thead>
    <tr>
      <table id="result" border="2" layout= "fixed" width=" 50%"  >
  <colgroup>
    <col style="width: 33%" />
    <col style="width: 33%" />
      <th>Student Name</th>
      <th>Last name</th> 
      
         <th>Class</th>
    
      <th colspan="3"></th>
    </tr>
  </thead>

    <% @results.each do |result| %>
	<tr>
        <td><%= result.name %></td>
         <td><%= result.last_name %></td>
        
         <td><%= result.group %></td>
         
        <td><%= link_to 'View', result %></td>
      </tr>
 	<% end %>
</div>
 </div>
</body>


   