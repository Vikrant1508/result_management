
<% if current_user.teacher? %>
<h1>Students Name</h1>
<table>
  <thead>
    <tr>
      <table id="student" border="2" layout= "fixed" width=" 40%"  >
        <colgroup>
        <col style="width: 30%" />
        <col style="width: 30%" />
        <col style="width: 10%" />
      <th>Student name</th>
      <th>Last name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
     <% Teacher.all.each do |teacher| %>
      <tr>
        <table id="student" border="2" layout= "fixed" width=" 40%"  >
        <colgroup>
        <col style="width: 30%" />
        <col style="width: 30%" />
        <col style="width: 10%" />
        <td><%= teacher.name %></td>
        <td><%= teacher.last_name %></td>
        <td><%= link_to 'View', teacher %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br> 
<% else %>
Enter your Name on Search Button to view your Result ~~~~> <br>

<%= render 'form', student: @student %>

<%end %>
<%= link_to 'Back', students_path %>